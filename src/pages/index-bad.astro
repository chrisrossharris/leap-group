---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Strategic Marketing Solutions',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        {
          text: 'Solutions',
          links: [
            {
              text: 'Research',
              href: '/research',
            },
            {
              text: 'Websites',
              href: '/websites',
            }
          ],
        },
        {
          text: 'Industries',
          links: [
            {
              text: 'Adult Beverage',
              href: '/adult-beverage',
            }
          ],
        },
      ]}
      actions={[
        {
          text: 'Back to Homepage',
          href: 'http://leapgroup.com',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Strategic Marketing Solutions"
    subtitle="Empowering brands with data-driven strategies and creative solutions for impactful results."
  >
    <Fragment slot="title">
      Integrated Marketing <br class="hidden sm:inline"/> and Creative Expertise
    </Fragment>
  </HeroText>

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Tailored Solutions"
    subtitle="Choose the services that align with your business goals and drive measurable growth."
    prices={[
      {
        title: 'Research ',
        subtitle: 'Deep Analysis of Market & Consumer Data',
        price: '50k',
        period: 'project',
        items: [
          {
            description: 'Market Research & Analysis',
          },
          {
            description: 'Consumer Behavior Insights',
          },
          {
            description: 'Competitor Benchmarking',
          },
          {
            description: 'Custom Reports & Recommendations',
          },
        ],
        callToAction: {
          text: 'Learn More',
          href: '/research',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Websites',
        subtitle: 'Comprehensive Website Design & Development',
        price: '75k',
        period: 'project',
        items: [
          {
            description: 'Modern, Responsive Design',
          },
          {
            description: 'Custom CMS Integration',
          },
          {
            description: 'SEO & Performance Optimization',
          },
          {
            description: 'Ongoing Support & Maintenance',
          },
        ],
        callToAction: {
          text: 'Learn More',
          href: '/websites',
        },
      }
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Partner with Leap Group?"
    subtitle="Explore the unique benefits of our integrated marketing services."
    columns={2}
    items={[
      {
        title: 'Data-Driven Strategy',
        description: 'Our marketing plans are backed by data insights to ensure effective outcomes.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Creative Excellence',
        description: 'We deliver innovative solutions tailored to captivate and engage your audience.',
        icon: 'tabler:brush',
      },
      {
        title: 'Comprehensive Reporting',
        description: 'Get detailed analytics to measure campaign performance and ROI.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Seamless Integration',
        description: 'Our solutions integrate across channels to provide a unified brand experience.',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Scalable Services',
        description: 'Adaptable strategies that grow as your brandâ€™s needs evolve.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Dedicated Support',
        description: 'Our team offers ongoing support to ensure sustained success.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Our Process"
    tagline="A Proven Approach to Strategic Success"
    isReversed={true}
    items={[
      {
        title: 'Discover & Define Goals',
        icon: 'tabler:number-1',
      },
      {
        title: 'Strategize & Plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Create & Execute',
        icon: 'tabler:number-3',
      },
      {
        title: 'Analyze & Measure',
        icon: 'tabler:number-4',
      },
      {
        title: 'Optimize for Growth',
        icon: 'tabler:number-5',
      },
      {
        title: 'Review & Refine',
        icon: 'tabler:number-6',
      },
      {
        title: 'Support & Scale',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=2340&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Leap Group Process Image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to common questions about our strategic marketing solutions."
    columns={1}
    items={[
      {
        title: 'What industries do you specialize in?',
        description:
          'We work with a diverse range of industries, including retail, healthcare, technology, and more.',
      },
      {
        title: 'Can your services be customized?',
        description:
          'Yes, our solutions are tailored to meet the unique needs and goals of each client.',
      },
      {
        title: 'Do you provide analytics and reporting?',
        description:
          'We offer comprehensive analytics to measure the effectiveness and ROI of our campaigns.',
      },
      {
        title: 'How soon can we expect results?',
        description:
          'Results vary based on the campaign and goals, but initial insights are often available within the first few weeks.',
      },
      {
        title: 'Is there ongoing support available?',
        description:
          'Yes, we provide ongoing support and consultation to ensure your campaigns continue to succeed.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Elevate Your Brand with Leap Group"
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/',
      },
    ]}
  >
    <Fragment slot="subtitle">
      Partner with Leap Group to drive impactful results<br class="hidden sm:inline"/> through strategic and creative solutions.
    </Fragment>
  </CallToAction>
</Layout>
