---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Get in Touch with Us Today!"
    subtitle="If you have any questions or need support, we're here to help. Feel free to reach out directly or explore our FAQs for quick answers."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address',
      },
    ]}
    textarea={{
      label: 'Your Message',
    }}
    disclaimer={{
      label:
        'By submitting this form, you consent to Leap Group collecting and using your personal information as outlined in our Privacy Policy.',
    }}
    description="Our team typically responds within one business day."
  />
  
  <!-- Features2 Widget ************** -->

<Features2
title="We're Here to Assist You!"
items={[
  {
    title: 'General Support',
    description: `Reach out for assistance with account management, navigating our services, billing inquiries, or any general questions about our offerings.`,
  },
  {
    title: 'Contact Sales',
    description:
      'Connect with our sales team for questions about our services, customization options, pricing, or to discuss how we can support your business goals.',
  },
  {
    title: 'Technical Support',
    description:
      'Get help with any technical issues, whether it\'s troubleshooting, software compatibility, or any challenges related to our services.',
  },
  {
    title: 'Phone',
    description: '+1 (502) 212-1390',
    icon: 'tabler:headset',
  },
  {
    title: 'Email',
    description: 'support@leapgroupnetwork.com',
    icon: 'tabler:mail',
  },
  {
    title: 'Locations',
    description: 'Visit us at one of our offices in Louisville, Cincinnati, Indianapolis, or Chicago.',
    icon: 'tabler:map-pin',
  },
]}
/>


  <!-- Features2 Widget ************** -->

  <Features2
  title="Our Locations"
  tagline="Find Us"
  columns={4}
  items={[
    {
      title: 'Louisville',
      description: '2500 Technology Dr, Louisville, KY 40299',
      contact: '(502) 212-1390',
    },
    {
      title: 'Cincinnati',
      description: '214 E 8th St. Floor 2, Cincinnati, OH 45202',
      contact: '(513) 723-0290',
    },
    {
      title: 'Indianapolis',
      description: '310 N. Alabama St, Suite 350, Indianapolis, IN 46204',
      contact: '(317) 500-4928',
    },
    {
      title: 'Chicago',
      description: '110 North Wacker Drive, Chicago, IL 60606',
      contact: '(317) 500-4928',
    },
  ]}
  />

</Layout>
