---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { YouTube } from 'astro-embed';
import Brands from '~/components/widgets/Brands.astro';


const metadata = {
  title: 'Leap Group — Redefining Marketing Excellence with a Unified Approach',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    
    actions={[
      {
        variant: 'primary',
        text: 'Get started',
        href: '/contact',
        icon: 'tabler:trending-up',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    
  >
    <Fragment slot="tagline">
        Market Less. Matter More.
    </Fragment>
    <Fragment slot="title">
      Speacialized Access with <br class="hidden sm:inline" />a <span class="text-primary dark:text-primary highlight">&nbsp;Unified Approach</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Leap Group</span> unifies specialized companies under one roof, providing seamless collaboration and customized solutions to help brands grow smarter and matter more.</span
      >
    </Fragment>

    <Fragment slot="image">
      <YouTube id="bmk6l96v8Os" title="Leap Group: Redefining Marketing Excellence with a Unified Approach"      />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>


  <!-- Note Widget ******************* -->

  <Note />

  <!-- Content Widget **************** -->

  <!-- UPull & Pay Case Study **************** -->

  <Content
    isReversed
    tagline="Case Studies"
    title="Discover How We Empower Brands to Transform Insights into Impactful Strategies."
    items={[
        {
          title: 'Increased Customer Engagement',
          description:
            'Through targeted research, we identified key motivators for U-Pull & Pay’s audience, leading to a more engaging and customer-centric experience.',
        },
        {
          title: 'Optimized Messaging Strategy',
          description:
            'Our insights helped refine U-Pull & Pay’s messaging, ensuring it resonated with their target audience and clearly communicated their unique value proposition.',
        },
        {
          title: 'Improved Conversion Rates',
          description:
            'By aligning the customer journey with the insights we gathered, U-Pull & Pay saw a significant boost in conversion rates, turning more leads into loyal customers.',
        },
      ]}  
        image={{
        src: '~/assets/images/upull-pay.jpg',
        alt: 'U-Pull & Pay Case Study',
        }}
        callToAction={{
            target: '_blank',
            text: 'View the case study',
            icon: 'tabler:chevron-right',
            href: '#',
        }}
    >
    <Fragment slot="content">
      <h2 class="text-2xl  font-light tracking-tight dark:text-white sm:ext-3xl mb-6">  U-Pull & Pay </h2>
      <hr class="mb-6 w-12 border-primary border-4 dark:divide-black">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"> How we used research <br class="hidden md:inline" /> to rebuild the hotrod </h3>
    
    
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50/5 dark:bg-black dark:bg-opacity-20"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

<Content
isAfterContent
items={[
    {
      title: 'Deep Customer Understanding',
      description:
        'By conducting in-depth research, we uncovered what truly drives Kubota’s customers, allowing us to tailor strategies that align with their needs and values.',
    },
    {
      title: 'Enhanced Brand Perception',
      description:
        'Our insights led to a refreshed brand narrative for Kubota, strengthening its connection with customers and elevating brand perception in the market.',
    },
    {
      title: 'Strategic Market Positioning',
      description:
        'Using competitive analysis, we helped Kubota identify market opportunities and strategically position their brand to stand out from competitors.',
    },
  ]}
  
image={{
  src: '~/assets/images/kubota.jpg',
  alt: 'Kubota Case Study',
}}
callToAction={{
    target: '_blank',
    text: 'View the case study',
    icon: 'tabler:chevron-right',
    href: '#',
}}
>
<Fragment slot="content">
  <h2 class="text-2xl  font-light tracking-tight dark:text-white sm:ext-3xl mb-6">Kubota</h2>
  <hr class="mb-6 w-12 border-primary border-4 dark:divide-black">
  
  <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">How we used research to cultivate<br class="hidden md:inline" /> deeper customer connections
  </h3>
   
</Fragment>

<Fragment slot="bg">
  <div class="absolute inset-0 bg-green-50/5 dark:bg-black dark:bg-opacity-20"></div>
</Fragment>
</Content>

<!-- Content Widget **************** -->

<Content
isReversed
isAfterContent
items={[
    {
      title: 'Unified Brand Identity',
      description:
        'Through comprehensive research, we helped Premier Health consolidate its brand across multiple locations, ensuring a consistent and cohesive identity that resonates with patients.',
    },
    {
      title: 'Improved Patient Engagement',
      description:
        'Our insights revealed key touchpoints in the patient journey, enabling Premier Health to enhance engagement and provide a more personalized healthcare experience.',
    },
    {
      title: 'Strategic Communication Strategy',
      description:
        'We developed a communication strategy grounded in research that effectively conveyed Premier Health’s commitment to high-quality care, strengthening trust and loyalty among patients.',
    },
  ]}  
image={{
  src: '~/assets/images/premier-health.jpg',
  alt: 'Premier Health',
}}
callToAction={{
    target: '_blank',
    text: 'View the case study',
    icon: 'tabler:chevron-right',
    href: '#',
}}
>
<Fragment slot="content">
  <h2 class="text-2xl  font-light tracking-tight dark:text-white sm:ext-3xl mb-6">  Premier Health</h2>
  <hr class="mb-6 w-12 border-primary border-4 dark:divide-black">
  <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">How we used research to unify<br class="hidden md:inline" /> a brand and elevate patient care</h3>

</Fragment>

<Fragment slot="bg">
  <div class="absolute inset-0 bg-green-50/5 dark:bg-black dark:bg-opacity-20"></div>
</Fragment>
</Content>

  
  <!-- Brands Widget ****************** -->

  <Brands
    title="Clients & Partners"
    subtitle="At Leap Group, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: '~/assets/images/akc-logo.webp',
        alt: 'American Kennel Club',
      },
      {
        src: '~/assets/images/duck-brands.jpg',
        alt: 'Duck Brands',
      },
      {
        src: '~/assets/images/umcu.png',
        alt: 'UMCU',
      },

      {
        src: '~/assets/images/uofl.svg',
        alt: 'University of Louisville',
      },
      {
        src: '~/assets/images/texas.jpeg',
        alt: 'Texas Road House',
      },
      {
        src: '~/assets/images/pf-chang.png',
        alt: 'Pf Changs',
      },
      {
        src: '~/assets/images/john-frieda-grey.png',
        alt: 'John Frieda',
      },
    ]}
  />

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Solutions & Offerings"
    actions={[
      { variant: 'primary', text: 'Get Started', href: 'https://github.com/onwidget/astrowind' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/leap-group-structure.png',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">
      A <span class="text-primary dark:text-white highlight"
      >bespoke </span
      > holding company within reach.
    </Fragment>

    <Fragment slot="subtitle">
      
        <span class="font-semibold">“Market Less. Matter More.” </span>
      isn’t just our tagline. It’s a belief that we built our entire business operations to support. It’s why we designed a holding company with specialized agencies that intentionally complement — not compete with — each other and provide deeper insights than any generalist ever could.
    </Fragment>
  </Hero2>



  
  

  <!-- Features2 Widget ************** -->

<Features2
title="How we empower brands to thrive"
subtitle="Discover our key offerings that drive success in a rapidly evolving market."
tagline="Service Offerings"
items={[
  {
    title: 'Data-Driven Insights',
    description: 'Transform raw data into actionable insights that drive strategic decisions and fuel business growth.',
    icon: 'tabler:chart-bar',
  },
  {
    title: 'Integrated Marketing Solutions',
    description: 'Leverage our network of specialized agencies to create cohesive and impactful marketing strategies tailored to your brand.',
    icon: 'tabler:network',
  },
  {
    title: 'Creative Excellence',
    description: 'Delivering breakthrough creative experiences that resonate with your audience and elevate your brand.',
    icon: 'tabler:palette',
  },
  {
    title: 'Agility and Flexibility',
    description: 'A responsive approach that adapts to your evolving needs, ensuring you stay ahead in a dynamic market.',
    icon: 'tabler:refresh',
  },
  {
    title: 'Comprehensive Digital Strategy',
    description: "From SEO to social media, we craft digital strategies that maximize your brand's online presence and impact.",
    icon: 'tabler:world',
  },
  {
    title: 'Collaborative Expertise',
    description: 'Our unified team of experts works seamlessly across disciplines to deliver results that matter.',
    icon: 'tabler:heart-handshake',
  },
]}
>
<Fragment slot="bg">
  <div class="absolute inset-0 bg-green-50/50 dark:bg-transparent"></div>
</Fragment>
</Features2>


  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore our latest insights on logic + magic"
    information={`Dive into our insights on the logic + magic blog. 
                  Each article uncovers key strategies, creative breakthroughs, 
                  and data-driven insights that empower brands to excel in an ever-changing market. 
                  Stay informed and inspired as we explore the intersection of logic and creativity in marketing.`}
  />




  <!-- Stats Widget ****************** -->

  <Stats
  tagline="Real Results"
  title="Discover the Impact We've Made by Turning Insights into Tangible Results."
  
  stats={[
    { title: 'Downloads', amount: '132K' },
    { title: 'Stars', amount: '24.8K' },
    { title: 'Forks', amount: '10.3K' },
    { title: 'Users', amount: '48.4K' },
  ]}
  />


  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Subscribe',
        href: '/subscribe',
        
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Subscribe to Our Insights and Expertise
    </Fragment>

    <Fragment slot="subtitle">
      Receive relevant insights, expert perspectives, and exclusive research directly in your inbox.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-dark-green dark:bg-transparent"></div>
    </Fragment>
  </CallToAction>
</Layout>
